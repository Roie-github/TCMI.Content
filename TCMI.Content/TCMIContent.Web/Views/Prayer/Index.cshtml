@model IEnumerable<TCMIContent.Web.TCMIContentServices.Prayer>

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/bootstrap.css" rel="stylesheet" />
<script src="~/Scripts/jquery-1.9.1.min.js"></script>
<div class="container">
    <div class="jumbotron">
        <h2>Prayer Request</h2>
    </div>
    <div class="page-body">
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
        <table class="table table-bordered table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Phone)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Confidentiality)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Received)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Prayed)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Answered)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Phone)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Confidentiality)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Received)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Prayed)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Answered)
                    </td>
                    <td>
                        @Html.ActionLink("Update", "Update", new { id = item.id }) |
                        @Html.ActionLink("Details", "Details", new { id = item.id }) |
                        @Html.ActionLink("Remove", "Remove", new { id = item.id })
                    </td>
                </tr>
            }

        </table>

    </div>
</div>



